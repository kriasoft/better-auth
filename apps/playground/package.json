    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.8",
    "postgres": "^3.4.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1",
    "vite": "^7.1.6",
    "zod": "^4.1.9"
