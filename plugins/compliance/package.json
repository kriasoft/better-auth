{
  "name": "better-auth-compliance",
  "version": "0.0.1",
  "description": "Regional compliance and privacy plugin for Better Auth - GDPR, CCPA, and data protection automation",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@better-auth/cli": "^1.3.7",
    "@types/bun": "^1.2.20",
    "@types/node": "^24.3.0",
    "better-auth": "^1.3.7",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "better-auth": "^1.3.7"
  },
  "keywords": [
    "better-auth",
    "auth",
    "plugin",
    "compliance",
    "gdpr",
    "ccpa",
    "privacy",
    "consent",
    "data-protection",
    "regulation",
    "legal"
