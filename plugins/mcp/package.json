{
  "name": "better-auth-mcp",
  "version": "0.0.1",
  "description": "Model Context Protocol (MCP) server connector plugin for Better Auth - Connect Notion, Slack, and other MCP servers",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@better-auth/cli": "^1.3.11",
    "@types/bun": "^1.2.22",
    "@types/node": "^24.5.1",
    "better-auth": "^1.3.11",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "zod": "^4.1.9"
  },
  "peerDependencies": {
    "better-auth": "^1.3.11",
    "zod": "^4.1.9"
  },
  "keywords": [
    "better-auth",
    "auth",
    "plugin",
    "mcp",
    "model-context-protocol",
    "ai",
    "tools",
    "notion",
    "slack",
    "anthropic"
  ],
  "author": "Kriasoft <hello@kriasoft.com>",
  "contributors": [
    "Konstantin Tarkus <koistya@kriasoft.com>"
  ],
  "license": "MIT",
  "homepage": "https://kriasoft.com/better-auth/",
  "bugs": {
    "url": "https://github.com/kriasoft/better-auth/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/koistya"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kriasoft/better-auth.git",
    "directory": "better-auth-mcp"
  },
  "publishConfig": {
    "access": "public"
  }
}
