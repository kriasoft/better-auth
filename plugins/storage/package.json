{
  "name": "better-auth-storage",
  "version": "0.0.1",
  "description": "Cloud storage connector plugin for Better Auth - Connect Google Drive, OneDrive, SharePoint and more",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@better-auth/cli": "^1.3.12",
    "@types/bun": "^1.2.22",
    "@types/node": "^24.5.2",
    "better-auth": "^1.3.12",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "zod": "^4.1.9"
  },
  "peerDependencies": {
    "better-auth": ">1.3.12",
    "zod": ">4.1.9"
  },
  "keywords": [
    "better-auth",
    "auth",
    "plugin",
    "cloud-storage",
    "google-drive",
    "onedrive",
    "sharepoint",
    "dropbox",
    "oauth",
    "sync",
    "files"
  ],
  "author": "Kriasoft <hello@kriasoft.com>",
  "contributors": [
    "Konstantin Tarkus <koistya@kriasoft.com>"
  ],
  "license": "MIT",
  "homepage": "https://kriasoft.com/better-auth/",
  "bugs": {
    "url": "https://github.com/kriasoft/better-auth/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/koistya"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kriasoft/better-auth.git",
    "directory": "better-auth-storage"
  },
  "publishConfig": {
    "access": "public"
  }
}
