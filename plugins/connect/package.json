{
  "name": "better-auth-connect",
  "version": "0.0.1",
  "description": "Connect and sync data from various sources (Google Drive, Gmail, GitHub, etc.) with Better Auth",
  "keywords": [
    "better-auth",
    "authentication",
    "data-sync",
    "google-drive",
    "gmail",
    "github",
    "onedrive",
    "dropbox",
    "oauth",
    "integration"
  ],
  "author": "Konstantin Tarkus <hello@tarkus.me>",
  "homepage": "https://github.com/kriasoft/better-auth-plugins/tree/main/better-auth-connect",
  "repository": {
    "type": "git",
    "url": "https://github.com/kriasoft/better-auth-plugins.git",
    "directory": "better-auth-connect"
  },
  "bugs": {
    "url": "https://github.com/kriasoft/better-auth-plugins/issues"
  },
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/client.js",
      "types": "./dist/client.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "better-auth": "^1.3.13"
  },
  "devDependencies": {
    "@types/bun": "^1.2.22",
    "@types/node": "^24.5.2",
    "better-auth": "^1.3.13",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "zod": "^4.1.9"
  },
  "publishConfig": {
    "access": "public"
  }
}
